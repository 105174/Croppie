{{#extend "base"}}
{{#content "body"}}
  <section class="hero">
    <a name="home"></a>
    <div class="container grid">
    <nav>
      <ul>
        <a href="#home">Home</a>
        <a href="#options">Options</a>
        <a href="#demos">Demos</a>
        <a href="#who">Who</a>
      </ul>
    </nav>
      <div class="col-1-2">
        <h1>Croppie</h1>
        <p>
          Croppie is a fast, easy to use image cropping plugin with tons of configuration options!
        </p>
      </div>
      <div class="col-1-2">
        <div class="demo-cropper">

        </div>
      </div>
    </div>
  </section>
  <section>
    <a name="options"></a>
    <div class="section-header">
      <h3>Options</h3>
    </div>
    <div class="container">
      <pre class="language-javascript"><code class="language-javascript">
        $("#item").imageCropper({
          viewportWidth: Integer,
          viewportHeight: Integer,
          boundaryWidth: Integer,
          boundaryHeight: Integer,
          customClass: String,
          showZoom: Boolean,
          update: Function (cropper) { }
        });
      </code></pre>
    </div>
  </section>

  <section>
    <a name="demos"></a>
    <div class="section-header">
      <h3>Demos</h3>
    </div>
    <div class="container" style="min-height: 250px">
      <div class="grid">
        <div class="col-1-2">
          <fieldset>
            <legend>Cropper</legend>
            <div id="container">

            </div>
          </fieldset>
        </div>
        <div class="col-1-2">
          <fieldset>
            <legend>Output</legend>
            <div id="result"></div>
          </fieldset>
        </div>
      </div>
    </div>
  </section>

  <section>
    <a name="who"></a>
    <div class="section-header">
      <h3>Who?</h3>
    </div>
    <div class="container" style="min-height: 250px">
      
    </div>
  </section>
{{/content}}

